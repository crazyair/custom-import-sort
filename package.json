{
  "name": "import-sort",
  "version": "0.0.8",
  "author": "crazyair",
  "publisher": "crazyair",
  "displayName": "Import Sort",
  "description": "Allows you to customize and automate import sorting",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyair/import-sort"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Run Import Sort",
        "command": "importSort.sortImports"
      }
    ],
    "configuration": [
      {
        "title": "ImportSort",
        "properties": {
          "importSort.sortOnSave": {
            "type": "boolean",
            "description": "Sort imports on save",
            "default": true
          },
          "importSort.sortingSettings": {
            "type": "array",
            "description": "How your imports should be sorted",
            "default": [
              {
                "regex": [
                  "^react$",
                  "^[a-z]",
                  "^@[^/]"
                ]
              },
              {
                "regex": [
                  "^@/"
                ]
              },
              {
                "regex": [
                  "."
                ],
                "regexNotEqual": "\\.(less|css)$"
              },
              {
                "regex": [
                  "\\.(less|css)$"
                ]
              }
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@babel/parser": "^7.20.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jscodeshift": "^0.11.5",
    "jscodeshift": "^0.14.0",
    "recast": "^0.21.5"
  }
}
